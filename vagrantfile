Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"

  config.vm.synced_folder "supl/", "/home/vagrant/supl"

  config.vm.provision "bootstrap",
    inline: "sudo apt-get update && sudo apt-get -y install git libssl-dev pkg-config",
    type: "shell",
    run: "once"

  config.vm.provision "supl",
    inline: "cd supl && ./configure --precompiled-asn1 && make && sudo make install && cd /usr/lib && sudo ln -s /usr/local/lib/libsupl.so libsupl.so && sudo ln -s /usr/local/lib/libsupl.so.1 libsupl.so.1",
    type: "shell", 
    run: "once"
end
